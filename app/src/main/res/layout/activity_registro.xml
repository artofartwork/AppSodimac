<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sodimac.net.appsodimac.view.RegistroActivity">

    <TextView
        android:text="Registro Cliente"
        android:layout_width="400px"
        android:layout_height="100px"
        android:id="@+id/tvRegistro"
        android:layout_marginTop="13dp"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />



    <EditText
        android:layout_height="80px"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtnumdoc"
        android:layout_width="match_parent"
        android:hint="Número de Documento"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/tvRegistro"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_height="80px"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtnombres"
        android:layout_width="match_parent"
        android:hint="Nombres"


        android:layout_below="@+id/txtmaterno"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />


    <EditText
        android:layout_height="80px"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtapaterno"
        android:layout_width="match_parent"
        android:hint="Apellido Paterno"

        android:layout_marginTop="11dp"
        android:layout_below="@+id/txtidtipodocumento"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_height="80px"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txttlf"
        android:layout_width="match_parent"
        android:hint="Telefono"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/txtnombres"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_height="80px"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtemail"
        android:layout_width="match_parent"
        android:hint="Email"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/txtidubigeo"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_height="80px"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtdireccion"
        android:layout_width="match_parent"
        android:hint="Direccion"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/txtemail"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Enviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnRegistro"
        android:onClick="click"
        android:background="@drawable/button_selector"
        android:layout_below="@+id/txtClave"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <EditText
        android:layout_height="80px"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtmaterno"
        android:layout_width="match_parent"
        android:hint="Apellido Materno"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/txtapaterno"
        android:layout_alignParentStart="true" />


    <EditText
        android:id="@+id/txtClave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtdireccion"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPassword" />

    <Spinner
        android:id="@+id/txtidubigeo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txttlf"
        android:layout_marginTop="21dp"
        android:spinnerMode="dialog"
        />

    <Spinner
        android:id="@+id/txtidtipodocumento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/txtnumdoc"
        android:layout_below="@+id/txtnumdoc"
        android:spinnerMode="dialog"

        />

    />

</RelativeLayout>
    </ScrollView>